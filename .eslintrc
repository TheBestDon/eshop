{
    "env": {
      //remove either of the lines below if you don't need it
      //enable nodejs environment
      "node": true,
      //enable browser environment
      "browser": true,
      "mongo": true
    },
    "globals": {
      //place settings for globals here, such as
      "exampleGlobalVariable": true,
      "Promise": true
    },
    "rules": {
      //enable ESLint rules, such as
      "eqeqeq": ["error", "smart"],
      "prettier/prettier": "error"
    },
    "plugins": [
      //you can put plugins here
      "react",
      "prettier",
      "flowtype"
    ],    
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
        }
      },
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:flowtype/recommended"],

    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
}